view{
    box-sizing: border-box;
}
.register{
    padding-top: 57rpx;
}
.register-title{
    display: flex;
   justify-content: center;
}
.register-title-img{
    width: 662rpx;
    height: 52rpx;
}
.register-description{
    margin-top: 11rpx;
    font-size: 26rpx;
    color: #666;
    line-height: 36rpx;
    text-align: center;
    margin-bottom: 50rpx;
}
.register-box{
    width:630rpx;
    height:100rpx;
    border-radius:100rpx;
    border: 2rpx solid #e9e9e9;
    margin: 0 auto 40rpx;
    display: flex;
    align-items: center;
    padding: 0 40rpx;
}
.register-zone{
    display: flex;
    align-items: center;
    margin-right: 20rpx
}
.register-zone-icon{
    width: 20rpx;
    height: 20rpx;
    margin-left: 4rpx;
}
.register-zone-code{
    font-size: 30rpx;
    color: #4a4a4a;
}
.register-input{
    flex: 1;
    font-size: 30rpx;
    color: #4a4a4a;
}
.register-input-placeholder{
    color: #9b9b9b;
    font-size: 30rpx;
}
.register-code-btn{
    width: 180rpx;
    height: 60rpx;
    border-radius: 60rpx;
    background: #FD5E02;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
}
.register-code-btn.active{
    background: #d3d3d3;
}
.register-btn{
    margin-bottom: 22rpx;
    background: #e9e9e9;
    justify-content: center;
    color: #fff;
    font-size: 36rpx;
}
.register-btn.active{
    background: #FD5E02;
}
.register-no-code{
    display: flex;
    align-items: center;
    padding-left: 88rpx;
}
.register-no-code-icon{
    width: 32rpx;
    height: 32rpx;
}
.register-no-code-val{
    font-size: 24rpx;
    color: #9b9b9b;
    margin-left: 4rpx;
}
.register-argeement{
    position: fixed;
    bottom: 56rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.register-argeement-val{
    font-size: 24rpx;
    color: #9b9b9b;
    margin-left: 10rpx;
}