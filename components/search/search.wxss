.search{
    display: flex;
}
.search-main{
    flex: 1;
    width: 100%;
    height: 70rpx;
    background: #F6F6F6;
    border-radius: 70rpx;
    position: relative;
}
.search-icon{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 30rpx;
}
.search-input{
    height: 70rpx;
    padding-left: 80rpx;
    font-size: 28rpx;
    line-height: 70rpx;
    padding-right: 80rpx;
    color: #4a4a4a;
}
.search-close{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 30rpx;
}
.placeholader-style{
    color: #D3D3D3;
    font-size: 28rpx;
}
.search-cancle{
    line-height: 70rpx;
    color: #9B9B9B;
    font-size: 28rpx;
    margin-left: 30rpx;
}