.component{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100%;
}
.component-description{
    padding: 30rpx;
    flex: 1;
}
.component-title{
    font-size: 40rpx;
}
.component-content{
    margin-top: 20rpx;
    border-top: 2rpx solid #000;
}
.component-des-title{
    display: flex;
    border-bottom: 2rpx solid #000;
}
.component-des-title > text{
    flex: 4;
    text-align: center;
    font-size: 30rpx;
    line-height: 60rpx;
}
.component-warn{
    padding-top: 30rpx;
    font-size: 28rpx;
    color: red;
}
.component-answer{
    font-size: 30rpx;
    margin-top: 30rpx;
}