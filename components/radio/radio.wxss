.radio{

}
.radio-title {
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 30rpx;
    background: #F6F6F6;
    font-size: 28rpx;
    color: #9B9B9B;
}
.radio-group{
    display: flex;
    flex-direction: column;
}
.radio-content{
    height: 100rpx;
    padding-left: 30rpx;
    display: flex;
    align-items: center;
    background: #FFFFFF;
    box-shadow: inset 0 0 0 0 #E9E9E9;
}
.radio-content:nth-of-type(1){
    border-bottom: 2rpx solid #e9e9e9;
}
.radio-content radio .wx-radio-input{
    width: 40rpx !important;
    height: 40rpx !important;
    border-radius: 40rpx !important;
}
.radio-value{
    margin-left: 12rpx;
    font-size: 30rpx;
    color: #4A4A4A; 
    width:100%;
    height:100rpx;
    line-height:102rpx;
}