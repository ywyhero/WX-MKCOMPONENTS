.toast-btn{
    position: fixed;
    bottom: 200rpx;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid #000;
    border-radius: 4rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    font-size: 28rpx;
}
.component{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100%;
}
.component-description{
    padding: 30rpx;
    flex: 1;
}
.component-title{
    font-size: 40rpx;
}
.component-content{
    margin-top: 20rpx;
    border-top: 2rpx solid #000;
}
.component-des-title{
    display: flex;
    border-bottom: 2rpx solid #000;
}
.component-des-title > text{
    flex: 4;
    text-align: center;
    font-size: 24rpx;
    line-height: 60rpx;
}
.component-warn{
    padding-top: 30rpx;
    font-size: 28rpx;
    color: red;
}